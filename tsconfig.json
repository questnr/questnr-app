{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
        "~/*": [
            "app/*",
            "assets/*"
        ],
        "app/*": [
          "app/*"
        ],
        "assets/*": [
          "assets/*"
        ],
        "*": [
          "./node_modules/tns-core-modules/*",
          "./node_modules/*"
        ]
    },
    "module": "ESNext",
    "target": "es2017",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "lib": [
      "es2017",
      "dom",
      "es6"
    ]
  },
  "exclude": [
    "node_modules",
    "platforms"
  ]
}
