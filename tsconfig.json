{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "~/*": [
        "app/*",
        "app/assets/*"
      ],
      "app/*": [
        "app/*"
      ],
      "assets/*": [
        "app/assets/*"
      ],
      "*": [
        "./node_modules/tns-core-modules/*",
        "./node_modules/*"
      ]
    },
    "module": "esnext",
    "target": "es2017",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "lib": [
      "es2017",
      "dom",
      "es6"
    ],
    "removeComments": false
  },
  "exclude": [
    "node_modules",
    "platforms"
  ]
}